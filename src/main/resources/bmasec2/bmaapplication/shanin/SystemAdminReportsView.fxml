<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="547.0" prefWidth="920.0" style="-fx-background-color: #f4f4f9;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="bmasec2.bmaapplication.shanin.SystemAdminReportsViewController">
    <children>

        <Label layoutX="30.0" layoutY="25.0" text="Generate Reports" textFill="#1a237e">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Label>
        <Label layoutX="30.0" layoutY="55.0" text="Select parameters to generate and export system reports." textFill="#546e7a">
            <font>
                <Font size="14.0" />
            </font>
        </Label>


        <VBox layoutX="30.0" layoutY="120.0" prefHeight="255.0" prefWidth="421.0" spacing="15.0">
            <children>
                <Label text="1. Select Report Type">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Label>
                <ComboBox fx:id="chooseAReportComboBox" prefWidth="400.0" promptText="Choose a report..." />

                <Label text="2. Select Date Range">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Label>
                <DatePicker fx:id="startDateDatePicker" prefWidth="400.0" promptText="Start Date" />
                <DatePicker fx:id="endDateDatePicker" prefWidth="400.0" promptText="End Date" />

                <Label text="3. Generate">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Label>
                <Button mnemonicParsing="false" onAction="#generateAndViewReportBtnOnAction" prefHeight="40.0" prefWidth="200.0" style="-fx-background-color: #1a237e;" text="Generate &amp; View Report" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Button>
            </children>
        </VBox>
      <TableView fx:id="reportTableView" layoutX="9.0" layoutY="383.0" prefHeight="279.0" prefWidth="895.0">
        <columns>
          <TableColumn fx:id="reportIdColumn" prefWidth="75.0" text="Report Id" />
          <TableColumn fx:id="reportTypeColumn" prefWidth="75.0" text="Report Type" />
            <TableColumn fx:id="generatedByColumn" prefWidth="75.0" text="Generate By" />
            <TableColumn fx:id="reportContentColumn" prefWidth="168.33331298828125" text="Report Content" />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
    </children>
</AnchorPane>
