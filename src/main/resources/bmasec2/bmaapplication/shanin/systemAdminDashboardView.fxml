                    <children>
                        <Label text="Recent System Activity" textFill="#1a237e">
                            <font>
                                <Font name="System Bold" size="16.0" />
                            </font>
                        </Label>
                        <TableView fx:id="recentActivityTable" prefHeight="230.0" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="userColumn" prefWidth="110.0" text="User" />
                                <TableColumn fx:id="actionColumn" prefWidth="160.0" text="Action" />
                                <TableColumn fx:id="timestampColumn" prefWidth="100.0" text="Time" />
                            </columns>
                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                            </columnResizePolicy>
