                <VBox prefHeight="277.0" prefWidth="450.0" spacing="10.0" style="-fx-background-color: #ffffff; -fx-background-radius: 10;">
                    <effect>
                        <DropShadow blurType="GAUSSIAN" height="20.0" radius="9.5" width="20.0">
                            <color>
                                <Color opacity="0.1" />
                            </color>
                        </DropShadow>
                    </effect>
