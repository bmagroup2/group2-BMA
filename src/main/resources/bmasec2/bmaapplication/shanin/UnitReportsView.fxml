<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="547.0" prefWidth="920.0" style="-fx-background-color: #f4f4f9;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="bmasec2.bmaapplication.shanin.UnitReportsViewController">
    <children>

        <Label layoutX="30.0" layoutY="25.0" text="Unit Reports" textFill="#1a237e"><font><Font name="System Bold" size="24.0" /></font></Label>
        <Label layoutX="30.0" layoutY="55.0" text="View summary reports from Training, Medical, and other units." textFill="#546e7a"><font><Font size="14.0" /></font></Label>


        <HBox alignment="CENTER_LEFT" layoutX="9.0" layoutY="103.0" spacing="10.0">
            <children>
                <Label text="Select Unit:"><font><Font name="System Bold" size="14.0" /></font></Label>
                <ComboBox fx:id="chooseUnitComboBox" prefWidth="200.0" promptText="Choose Unit" />
                <Label text="Date Range:"><font><Font name="System Bold" size="14.0" /></font></Label>
                <DatePicker fx:id="startDateDatePicker" promptText="Start Date" />
                <DatePicker fx:id="endDateDatePicker" promptText="End Date" />
                <Button mnemonicParsing="false" onAction="#generateReportBtnOnAction" style="-fx-background-color: #1a237e;" text="Generate Report" textFill="WHITE" />
            </children>
        </HBox>

        <TextArea fx:id="reportContentDisplayTextArea" layoutX="30.0" layoutY="150.0" prefHeight="367.0" prefWidth="860.0" promptText="Report content will be displayed here..." AnchorPane.bottomAnchor="30.0" AnchorPane.leftAnchor="30.0" AnchorPane.rightAnchor="30.0" />
    </children>
</AnchorPane>
