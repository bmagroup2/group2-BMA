<AnchorPane prefHeight="547.0" prefWidth="920.0" style="-fx-background-color: #f4f4f9;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="bmasec2.bmaapplication.shanin.UserManagementViewController">
    <children>

        <Label layoutX="30.0" layoutY="25.0" text="User Management" textFill="#1a237e">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Label>
        <Label layoutX="30.0" layoutY="55.0" text="Manage access and roles for all system users." textFill="#546e7a">
            <font>
                <Font size="14.0" />
            </font>
        </Label>


        <HBox alignment="CENTER_LEFT" layoutX="30.0" layoutY="100.0" spacing="10.0" AnchorPane.rightAnchor="30.0">
            <children>
                <TextField fx:id="searchByNameTextfield" prefWidth="250.0" promptText="Search by Name..." />
                <ComboBox fx:id="filterByRoleComboBox" prefWidth="150.0" promptText="Filter by Role" />
                <Button mnemonicParsing="false" onAction="#filterBtnOnAction" style="-fx-background-color: #1a237e;" text="Filter" textFill="WHITE" />
                <HBox HBox.hgrow="ALWAYS" /> <!-- Spacer -->
                <Button mnemonicParsing="false" onAction="#addNewUserBtnOnAction" style="-fx-background-color: #4CAF50;" text="+ Add New User" textFill="WHITE" />
                <Button mnemonicParsing="false" onAction="#deleteSelectedBtnOnAction" style="-fx-background-color: #f44336;" text="Delete Selected" textFill="WHITE" />
            </children>
        </HBox>


        <TableView fx:id="userListTableView" layoutX="30.0" layoutY="150.0" prefHeight="367.0" prefWidth="860.0" AnchorPane.bottomAnchor="30.0" AnchorPane.leftAnchor="30.0" AnchorPane.rightAnchor="30.0">
            <columns>
                <TableColumn fx:id="userIdColumn" prefWidth="100.0" text="User ID" />
                <TableColumn fx:id="fullNameColumn" prefWidth="200.0" text="Full Name" />
                <TableColumn fx:id="emailColumn" prefWidth="250.0" text="Email" />
                <TableColumn fx:id="roleColumn" prefWidth="150.0" text="Role" />
                <TableColumn fx:id="statusColumn" prefWidth="150.0" text="Status" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
      <Pane fx:id="userAddPane" layoutX="220.0" layoutY="146.0" prefHeight="364.0" prefWidth="490.0" style="-fx-background-color: white; visibility: false;">
         <children>
            <Label layoutX="26.0" layoutY="64.0" text="User ID:">
               <font>
                  <Font size="20.0" />
               </font>
            </Label>
            <Label layoutX="28.0" layoutY="101.0" text="Full Name:">
               <font>
                  <Font size="20.0" />
               </font>
            </Label>
            <Label layoutX="30.0" layoutY="142.0" text="Email:">
               <font>
                  <Font size="20.0" />
               </font>
            </Label>
            <Label layoutX="31.0" layoutY="203.0" text="Role">
               <font>
                  <Font size="20.0" />
               </font>
            </Label>
            <Label layoutX="32.0" layoutY="243.0" text="Status:">
               <font>
                  <Font size="20.0" />
               </font>
            </Label>
            <TextField fx:id="userIdTextField" layoutX="173.0" layoutY="64.0" />
            <TextField fx:id="fullNameTextField" layoutX="173.0" layoutY="100.0" />
            <TextField fx:id="emailTextField" layoutX="173.0" layoutY="140.0" />
            <ComboBox fx:id="statusComboBox" layoutX="174.0" layoutY="243.0" prefWidth="150.0" promptText="select" />
            <Label layoutX="31.0" layoutY="17.0" text="Add New">
               <font>
                  <Font name="System Bold" size="32.0" />
               </font>
            </Label>
            <Button layoutX="183.0" layoutY="298.0" mnemonicParsing="false" onAction="#submitBtnOnAction" style="-fx-background-color: green;" text="Submit" textFill="WHITE">
               <font>
                  <Font size="20.0" />
               </font>
            </Button>
            <Label layoutX="443.0" layoutY="5.0" onMouseClicked="#crossBtnOnMouseClicked" text="X">
               <font>
                  <Font name="System Bold" size="43.0" />
               </font>
            </Label>
            <ComboBox fx:id="roleComboBox" layoutX="176.0" layoutY="202.0" prefWidth="150.0" promptText="select" />
            <Label layoutX="30.0" layoutY="174.0" text="Password:">
               <font>
                  <Font size="20.0" />
               </font>
            </Label>
            <TextField fx:id="passwordTextField" layoutX="173.0" layoutY="172.0" />
         </children>
      </Pane>
    </children>
</AnchorPane>
