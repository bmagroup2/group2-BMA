<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="547.0" prefWidth="920.0" style="-fx-background-color: #f4f4f9;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="bmasec2.bmaapplication.shanin.AuditLogsViewController">
    <children>

        <Label layoutX="30.0" layoutY="25.0" text="Audit Logs" textFill="#1a237e">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Label>
        <Label layoutX="30.0" layoutY="55.0" text="Review a detailed log of all user activities." textFill="#546e7a">
            <font>
                <Font size="14.0" />
            </font>
        </Label>


        <HBox alignment="CENTER_LEFT" layoutX="30.0" layoutY="100.0" spacing="10.0">
            <children>
                <TextField fx:id="filterByUserTextfield" prefWidth="200.0" promptText="Filter by User..." />
                <DatePicker fx:id="startDateDatePicker" promptText="Start Date" />
                <DatePicker fx:id="endDateDatePicker" promptText="End Date" />
                <Button mnemonicParsing="false" onAction="#filterLogsBtnOnAction" style="-fx-background-color: #1a237e;" text="Filter Logs" textFill="WHITE" />
            </children>
        </HBox>


        <TableView fx:id="auditLogsTableView" layoutX="30.0" layoutY="150.0" prefHeight="367.0" prefWidth="860.0" AnchorPane.bottomAnchor="30.0" AnchorPane.leftAnchor="30.0" AnchorPane.rightAnchor="30.0">
            <columns>
                <TableColumn fx:id="timestampColumn" prefWidth="150.0" text="Timestamp" />
                <TableColumn fx:id="userColumn" prefWidth="150.0" text="User" />
                <TableColumn fx:id="roleColumn" prefWidth="120.0" text="Role" />
                <TableColumn fx:id="actionPerformedColumn" prefWidth="300.0" text="Action Performed" />
                <TableColumn fx:id="ipAddressColumn" prefWidth="130.0" text="IP Address" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
    </children>
</AnchorPane>
