<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="547.0" prefWidth="920.0" style="-fx-background-color: #f4f4f9;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="bmasec2.bmaapplication.afifa.ViewRoutineViewController">
    <children>

        <Label layoutX="30.0" layoutY="25.0" text="Training Schedule" textFill="#1a237e"><font><Font name="System Bold" size="24.0" /></font></Label>
        <Label layoutX="30.0" layoutY="55.0" text="Your daily and weekly training routine." textFill="#546e7a"><font><Font size="14.0" /></font></Label>


        <HBox alignment="CENTER_LEFT" layoutX="30.0" layoutY="100.0" spacing="10.0">
            <children>
                <Button mnemonicParsing="false" onAction="#todayroutineonaction" style="-fx-background-color: #1a237e;" text="View Today's Routine" textFill="WHITE" />
                <Button mnemonicParsing="false" onAction="#weeklyroutineonaction" text="View Weekly Routine" />
            </children>
        </HBox>


        <TableView fx:id="trainingscheduletableview" layoutX="30.0" layoutY="150.0" prefHeight="367.0" prefWidth="860.0" AnchorPane.bottomAnchor="30.0" AnchorPane.leftAnchor="30.0" AnchorPane.rightAnchor="30.0">
            <columns>
                <TableColumn fx:id="tranningtimecolumn" prefWidth="150.0" text="Time" />
                <TableColumn fx:id="tranningactivitycolumn" prefWidth="350.0" text="Activity" />
                <TableColumn fx:id="traninglocationcolumn" prefWidth="350.0" text="Location" />
            </columns>
            <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY" /></columnResizePolicy>
        </TableView>
    </children>
</AnchorPane>
