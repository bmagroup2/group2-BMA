<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="547.0" prefWidth="920.0" style="-fx-background-color: #f4f4f9;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="bmasec2.bmaapplication.afifa.AttendenceMonitorViewController">
    <children>

        <Label layoutX="30.0" layoutY="25.0" text="Attendance Monitor" textFill="#1a237e"><font><Font name="System Bold" size="24.0" /></font></Label>

        <HBox alignment="CENTER_LEFT" layoutX="30.0" layoutY="100.0" spacing="10.0">
            <children>
                <ComboBox fx:id="attendencecadetcombobox" prefWidth="200.0" promptText="Select Cadet..." />
                <DatePicker fx:id="attendencedatepicker" promptText="Select Date" />
                <Button mnemonicParsing="false" onAction="#fetchrecordsonaction" style="-fx-background-color: #1a237e;" text="Fetch Records" textFill="WHITE" />
            </children>
        </HBox>

        <TableView fx:id="attendencemonitortableview" layoutX="30.0" layoutY="150.0" prefHeight="367.0" prefWidth="860.0" AnchorPane.bottomAnchor="30.0" AnchorPane.leftAnchor="30.0" AnchorPane.rightAnchor="30.0">
            <columns>
                <TableColumn fx:id="attendencecadetnamecolumn" prefWidth="200.0" text="Cadet Name" />
                <TableColumn fx:id="attendenceceactivitycolumn" prefWidth="250.0" text="Activity" />
                <TableColumn fx:id="attendencedatecolumn" prefWidth="150.0" text="Date" />
                <TableColumn fx:id="attendencestatuscolumn" prefWidth="150.0" text="Status (Present/Absent/Late )" />
            </columns>
            <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY" /></columnResizePolicy>
        </TableView>
    </children>
</AnchorPane>
