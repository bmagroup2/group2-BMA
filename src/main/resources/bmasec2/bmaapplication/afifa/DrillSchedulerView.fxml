<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="547.0" prefWidth="920.0" style="-fx-background-color: #f4f4f9;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="bmasec2.bmaapplication.afifa.DrillSchedualerViewController">
    <children>

        <Label layoutX="30.0" layoutY="25.0" text="Drill Scheduler" textFill="#1a237e"><font><Font name="System Bold" size="24.0" /></font></Label>


        <HBox layoutX="30.0" layoutY="100.0" spacing="20.0" AnchorPane.bottomAnchor="30.0" AnchorPane.leftAnchor="30.0" AnchorPane.rightAnchor="30.0">
            <VBox spacing="10.0" HBox.hgrow="ALWAYS">
                <children>
                    <Label text="This Week's Scheduled Drills"><font><Font name="System Bold" size="16.0" /></font></Label>
                    <ListView fx:id="drillscheduleddrillslistview" prefHeight="380.0" />
                </children>
            </VBox>
            <VBox prefWidth="350.0" spacing="10.0">
                <children>
                    <Label text="Schedule New Drill" textFill="#1a237e"><font><Font name="System Bold" size="16.0" /></font></Label>
                    <Label text="Cadet Group" />
                    <ComboBox fx:id="drillcadetgroupcombobox" prefWidth="350.0" promptText="Select group..." />
                    <Label text="Date" />
                    <DatePicker fx:id="drilldatepicker" prefWidth="350.0" />
                    <Label text="Time (e.g., 14:00 )" />
                    <TextField fx:id="drilltimetextfield" />
                    <Label text="Activity" />
                    <TextField fx:id="drillactivitytextfield" />
                    <Button mnemonicParsing="false" onAction="#drillsaveschedulonaction" style="-fx-background-color: #4CAF50;" text="Save Schedule" textFill="WHITE" />
                </children>
            </VBox>
        </HBox>
    </children>
</AnchorPane>
