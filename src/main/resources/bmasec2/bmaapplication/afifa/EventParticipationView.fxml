<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="547.0" prefWidth="920.0" style="-fx-background-color: #f4f4f9;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="bmasec2.bmaapplication.afifa.EventParticipationViewController">
    <children>

        <Label layoutX="30.0" layoutY="25.0" text="Track Event Participation" textFill="#1a237e"><font><Font name="System Bold" size="24.0" /></font></Label>


        <HBox alignment="CENTER_LEFT" layoutX="30.0" layoutY="100.0" spacing="10.0">
            <children>
                <Label text="Select Event:"><font><Font name="System Bold" size="14.0" /></font></Label>
                <ComboBox fx:id="trackeventcombobox" prefWidth="300.0" promptText="Choose an event..." />
                <Button mnemonicParsing="false" onAction="#eventviewparticipationonaction" style="-fx-background-color: #1a237e;" text="View Participation" textFill="WHITE" />
            </children>
        </HBox>

        <TableView fx:id="participanttableview" layoutX="30.0" layoutY="150.0" prefHeight="367.0" prefWidth="860.0" AnchorPane.bottomAnchor="30.0" AnchorPane.leftAnchor="30.0" AnchorPane.rightAnchor="30.0">
            <columns>
                <TableColumn fx:id="participationnamecolumn" prefWidth="250.0" text="Cadet Name" />
                <TableColumn fx:id="participationidcolumn" prefWidth="150.0" text="Cadet ID" />
                <TableColumn fx:id="participationstatuscolumn" prefWidth="200.0" text="Participation Status (Present/Absent )" />
            </columns>
            <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY" /></columnResizePolicy>
        </TableView>
    </children>
</AnchorPane>
