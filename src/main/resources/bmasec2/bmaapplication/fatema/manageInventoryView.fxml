<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="547.0" prefWidth="920.0" style="-fx-background-color: #f4f4f9;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="bmasec2.bmaapplication.fatema.manageInventoryViewController">
    <children>
        <Label layoutX="30.0" layoutY="25.0" text="Manage Inventory" textFill="#1a237e"><font><Font name="System Bold" size="24.0" /></font></Label>
        <Label layoutX="30.0" layoutY="55.0" text="View, update, and track all inventory items." textFill="#546e7a"><font><Font size="14.0" /></font></Label>
        <HBox alignment="CENTER_LEFT" layoutX="30.0" layoutY="100.0" spacing="10.0" AnchorPane.rightAnchor="30.0">
            <children>
                <TextField fx:id="selectItemNameTextField" prefWidth="250.0" promptText="Search by Item Name..." />
                <ComboBox fx:id="filterByCategoryComboBox" prefWidth="200.0" promptText="Filter by Category" />
                <Button mnemonicParsing="false" onAction="#searchButtonOnAction" style="-fx-background-color: #1a237e;" text="Search" textFill="WHITE" />
                <HBox HBox.hgrow="ALWAYS" />
                <Button mnemonicParsing="false" onAction="#updateSelectedStockOnAction" style="-fx-background-color: #FF9800;" text="Update Selected Stock" textFill="WHITE" />
            </children>
        </HBox>
        <TableView fx:id="manageInventoryTableView" layoutX="30.0" layoutY="150.0" prefHeight="367.0" prefWidth="860.0" AnchorPane.bottomAnchor="30.0" AnchorPane.leftAnchor="30.0" AnchorPane.rightAnchor="30.0">
            <columns>
                <TableColumn fx:id="itemIdTableColumn" prefWidth="150.0" text="Item ID" />
                <TableColumn fx:id="itemNameTableColumn" prefWidth="300.0" text="Item Name" />
                <TableColumn fx:id="categoryTableColumn" prefWidth="200.0" text="Category" />
                <TableColumn fx:id="quantityTableColumn" prefWidth="100.0" text="Quantity" />
                <TableColumn fx:id="statusTableColumn" prefWidth="100.0" text="Status" />
            </columns>
            <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY" /></columnResizePolicy>
        </TableView>
    </children>
</AnchorPane>
