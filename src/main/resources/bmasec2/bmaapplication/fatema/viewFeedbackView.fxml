<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="547.0" prefWidth="920.0" style="-fx-background-color: #f4f4f9;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="bmasec2.bmaapplication.fatema.viewFeedbackViewController">
    <children>
        <Label layoutX="30.0" layoutY="25.0" text="View Cadet Feedback" textFill="#1a237e"><font><Font name="System Bold" size="24.0" /></font></Label>
        <Label layoutX="30.0" layoutY="55.0" text="Review feedback submitted by cadets for your sessions." textFill="#546e7a"><font><Font size="14.0" /></font></Label>
        <HBox layoutX="30.0" layoutY="100.0" spacing="20.0" AnchorPane.bottomAnchor="30.0" AnchorPane.leftAnchor="30.0" AnchorPane.rightAnchor="30.0">
            <children>
                <VBox spacing="10.0" HBox.hgrow="ALWAYS">
                    <children>
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                            <children>
                                <Label text="Filter by Session:"><font><Font name="System Bold" size="14.0" /></font></Label>
                                <ComboBox fx:id="selectTrainingSrssionComboBox" prefWidth="250.0" promptText="Select a training session" />
                            </children>
                        </HBox>
                        <ListView fx:id="filterBySessionListView" prefHeight="350.0" />
                    </children>
                </VBox>
                <VBox prefWidth="450.0" spacing="10.0">
                    <children>
                        <Label text="Feedback Details" textFill="#1a237e"><font><Font name="System Bold" size="16.0" /></font></Label>
                        <Label fx:id="cadetIDLabel" text="From: [Cadet ID]" />
                        <TextArea fx:id="feedBackDetailsTextArea" editable="false" prefHeight="250.0" promptText="Feedback comments from the selected cadet will appear here." wrapText="true" />
                    </children>
                </VBox>
            </children>
        </HBox>
    </children>
</AnchorPane>
