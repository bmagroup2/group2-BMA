<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="547.0" prefWidth="920.0" style="-fx-background-color: #f4f4f9;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="bmasec2.bmaapplication.fatema.addInventoryViewController">
    <children>
        <Label layoutX="30.0" layoutY="25.0" text="Add New Inventory Item" textFill="#1a237e"><font><Font name="System Bold" size="24.0" /></font></Label>
        <Label layoutX="30.0" layoutY="55.0" text="Add a new item to the logistics database." textFill="#546e7a"><font><Font size="14.0" /></font></Label>
        <VBox layoutX="30.0" layoutY="120.0" prefWidth="500.0" spacing="10.0">
            <children>
                <Label text="Item Name"><font><Font name="System Bold" size="14.0" /></font></Label>
                <TextField fx:id="itemNameTextField" promptText="e.g., Combat Boots, Size 10" />
                <Label text="Category"><font><Font name="System Bold" size="14.0" /></font></Label>
                <ComboBox fx:id="categoryComboBox" prefWidth="500.0" promptText="Select a category (e.g., Uniform, Equipment )..." />
                <Label text="Initial Quantity"><font><Font name="System Bold" size="14.0" /></font></Label>
                <TextField fx:id="initialQuantityTextField" promptText="Enter a numeric value" />
                <Label text="Unit of Measurement"><font><Font name="System Bold" size="14.0" /></font></Label>
                <TextField fx:id="unitOfMeasurementTextField" promptText="e.g., pairs, units, boxes" />
                <Button mnemonicParsing="false" onAction="#addItemToInventoryOnAction" prefHeight="40.0" prefWidth="180.0" style="-fx-background-color: #4CAF50;" text="Add Item to Inventory" textFill="WHITE"><font><Font name="System Bold" size="14.0" /></font></Button>
            </children>
        </VBox>
    </children>
</AnchorPane>
