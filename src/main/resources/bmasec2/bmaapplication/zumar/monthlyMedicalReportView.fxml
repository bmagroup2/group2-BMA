<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="547.0" prefWidth="920.0" style="-fx-background-color: #f4f4f9;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="bmasec2.bmaapplication.zumar.monthlyMedicalReportViewController">
    <children>
        <Label layoutX="30.0" layoutY="25.0" text="Generate Medical Report" textFill="#1a237e"><font><Font name="System Bold" size="24.0" /></font></Label>
        <Label layoutX="30.0" layoutY="55.0" text="Generate summary reports on health data and stats." textFill="#546e7a"><font><Font size="14.0" /></font></Label>
        <HBox alignment="CENTER_LEFT" layoutX="30.0" layoutY="100.0" spacing="10.0">
            <children>
                <Label text="Report Type:"><font><Font name="System Bold" size="14.0" /></font></Label>
                <ComboBox fx:id="reportTypeComboBox" prefWidth="200.0" promptText="e.g., Illness, Injury" />
                <Label text="Month:"><font><Font name="System Bold" size="14.0" /></font></Label>
                <DatePicker fx:id="monthDatePicker" prefWidth="200.0" />
                <Button mnemonicParsing="false" onAction="#generateReportOnActionButton" style="-fx-background-color: #1a237e;" text="Generate Report" textFill="WHITE" />
            </children>
        </HBox>
        <VBox layoutX="30.0" layoutY="150.0" prefHeight="367.0" prefWidth="860.0" AnchorPane.bottomAnchor="30.0" AnchorPane.leftAnchor="30.0" AnchorPane.rightAnchor="30.0">
            <children>
                <Label text="Report Summary for [Month]"><font><Font name="System Bold" size="16.0" /></font></Label>
                <BarChart fx:id="medicalReportSummaryBarChart" title="Cases by Type" VBox.vgrow="ALWAYS">
                    <xAxis><CategoryAxis side="BOTTOM" /></xAxis>
                    <yAxis><NumberAxis side="LEFT" /></yAxis>
                </BarChart>
            </children>
        </VBox>
    </children>
</AnchorPane>
